<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ove.termostat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.ove.termostat.ui.TermostatApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ove.termostat.ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ove.termostat.ui.MainActivity"
            android:icon="@mipmap/ic_launcher"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.ove.termostat.ui.DetailsActivity"
            android:parentActivityName="com.ove.termostat.ui.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>